# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Encryption
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_32_byte_encryption_key_base64

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=OneTimeSecret

# Email (Optional - Supabase handles auth emails)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@onetimesecret.com

# Rate Limiting
RATE_LIMIT_SECRET_CREATE=10
RATE_LIMIT_SECRET_VIEW=50
RATE_LIMIT_WINDOW_MS=900000
